<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <facetracker.donlingliang.facetrack.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <facetracker.donlingliang.facetrack.GraphicOverlay
            android:id="@+id/faceOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </facetracker.donlingliang.facetrack.CameraSourcePreview>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:weightSum="2"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/faceSwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_face_white_36dp"/>

        <ImageView
            android:id="@+id/cameraSwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_swap_horiz_white_36dp"/>
    </LinearLayout>
</FrameLayout>